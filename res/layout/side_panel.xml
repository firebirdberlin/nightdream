<?xml version="1.0" encoding="UTF-8"?>
<com.google.android.flexbox.FlexboxLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/side_panel"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    android:background="@drawable/sidepanel"
    app:alignItems="center"
    app:dividerDrawable="@drawable/divider"
    app:flexDirection="column"
    app:flexWrap="wrap"
    app:justifyContent="space_around"
    app:showDividerVertical="middle">

        <ImageView
            android:id="@+id/settings_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:contentDescription="settings"
            android:onClick="onSettingsClick"
            android:padding="5dp"
            app:srcCompat="@drawable/ic_settings" />

        <ImageView
            android:id="@+id/alarm_clock_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:contentDescription="@string/alarm"
            android:onClick="onAlarmClockClick"
            android:padding="5dp"
            app:srcCompat="@drawable/ic_alarm_clock_icon"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/icon_weather_forecast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:contentDescription="@string/weather"
            android:onClick="onWeatherForecastClick"
            android:padding="5dp"
            app:srcCompat="@drawable/ic_cloud"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/night_mode_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:contentDescription="@string/night_mode"
            android:onClick="onNightModeClick"
            android:padding="5dp"
            app:srcCompat="@drawable/ic_sun"
            android:focusable="true" />

        <ImageView
            android:id="@+id/torch_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:contentDescription="@string/flashlight"
            android:onClick="onTorchClick"
            android:padding="5dp"
            app:srcCompat="@drawable/ic_lightbulb"
            android:focusable="true" />

        <ImageView
            android:id="@+id/radio_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:contentDescription="@string/radio"
            android:focusable="true"
            android:onClick="onRadioClick"
            android:padding="5dp"
            app:srcCompat="@drawable/ic_radio"
            android:visibility="visible" />

</com.google.android.flexbox.FlexboxLayout>
