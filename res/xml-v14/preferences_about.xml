sk - Martin Renko\n
sr - Vladimir Milić\n
sv - Anders Danielsson et. al.\n
tr - Işıl Aylanç\n
uk - Ernest Feynman\n
vi - Phong Nguyen"/>

        <Preference
            app:iconSpaceReserved="false"
            app:icon="@drawable/ic_icons8"
            app:key="about_icons8"
            app:summary="icons8"
            app:title="Icons">
            <intent
                android:action="android.intent.action.VIEW"
                android:data="https://icons8.com"/>
        </Preference>

        <Preference
            app:iconSpaceReserved="false"
            app:icon="@drawable/ic_radio"
