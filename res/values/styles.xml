<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="ActivityTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowShowWallpaper">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="PreferencesTheme" parent="Theme.AppCompat">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">false</item>
        <item name="background">@color/grey</item>
        <item name="colorAccent">@color/blue</item>
        <item name="colorPrimary">@color/grey</item>
        <item name="android:textColorPrimary">@color/primary_text_color_selector</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="android:navigationBarColor" tools:targetApi="21">@color/grey</item>
    </style>

    <style name="SecondaryActivityTheme" parent="Theme.AppCompat.DayNight">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">false</item>
        <item name="colorAccent">@color/blue</item>
    </style>

    <style name="AlarmClockActivityTheme" parent="Theme.AppCompat.DayNight">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">false</item>
        <item name="colorAccent">@color/blue</item>
    </style>

    <style name="NotificationActivityTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowAnimationStyle">@null</item>
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">false</item>
        <item name="colorAccent">@color/blue</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Dialog">
        <item name="colorAccent">@color/blue</item>
        <item name="android:textColorPrimary">@color/primary_text_color_selector</item>
        <item name="android:windowBackground">@color/grey_bg</item>
    </style>

    <style name="TextAppearance.MaterialCalendarWidgetDate" parent="TextAppearance.MaterialCalendarWidget.Date">
        <item name="android:textSize">9sp</item>
        <item name="android:textColor">#FFF</item>
    </style>

    <style name="TextAppearance.MaterialCalendarWidgetWeekDay" parent="TextAppearance.MaterialCalendarWidget.WeekDay">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">#FFF</item>

    </style>
    <style name="TextAppearance.MaterialCalendarWidgetHeader" parent="TextAppearance.MaterialCalendarWidget.Header">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">#FFF</item>

    </style>
</resources>
